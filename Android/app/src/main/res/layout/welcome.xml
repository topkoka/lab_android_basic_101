<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/logo"
        />


    <TextView
        android:id="@+id/text_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        android:text="@string/by_continuing_you_accept_the_term_of_use_and_privacy_policy"
        android:textSize="13.7sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_by"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/skip"
        android:textSize="13.7sp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_skip"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/selector_btn"
        android:padding="16dp"
        android:text="@string/get_started"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/welcome_to_clipzy"
        android:textColor="@color/white"/>


</RelativeLayout>